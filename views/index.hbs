<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <!-- CSS only -->
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi'
      crossorigin='anonymous'
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3'
      crossorigin='anonymous'
      defer
    ></script>
    <title>Activos fijos</title>
  </head>
  <header class='mb-2'>
    <!-- As a heading -->
    <nav class='navbar bg-light'>
      <div class='container-fluid'>
        <span class='navbar-brand mb-0 h1'>Patrón Builder</span>
      </div>
    </nav>
  </header>
  <body>
    <form
      method='POST'
      class='mb-2 d-flex flex-row justify-content-center align-items-end gap-2'
    >
      <div>
        <label for=''>Activo Fijo</label>
        <select
          class='form-select'
          aria-label='Default select example'
          name='asset'
        >
          <option selected>Selecciona un activo fijo</option>
          <option value='computer'>Computadora</option>
          <option value='table'>Mesa</option>
          <option value='chair'>Silla</option>
        </select>
      </div>
      <button class='btn btn-primary'>Crear Activo</button>
    </form>
    <table class='table'>
      <thead>
        <tr>
          <th scope='col'>Código</th>
          <th scope='col'>Nombre</th>
          <th scope='col'>Precio</th>
          <th scope='col'>Descripcion</th>
          <th scope='col'>Vida útil</th>
          <th scope='col'>Factor depreciación</th>
          <th scope='col'>Fecha ingreso</th>
          <th scope='col'>Fecha manufactura</th>
          <th scope='col'>Tipo Asset</th>
        </tr>
      </thead>
      <tbody>
        {{#assets}}
          <tr scope='row'>
            <td>{{code}}</td>
            <td>{{name}}</td>
            <td>{{price}}</td>
            <td>{{description}}</td>
            <td>{{usefulLife}}</td>
            <td>{{depreciationRate}}</td>
            <td>{{ingressDate}}</td>
            <td>{{manufactureDate}}</td>
            <td>{{FixedAssetsType}}</td>
          </tr>
        {{/assets}}
      </tbody>
    </table>
  </body>
</html>